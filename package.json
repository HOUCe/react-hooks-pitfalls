{
  "name": "react-hook-pitfalls",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://react-hook-pitfalls.netlify.com/",
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "^3.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "echo no tests yet",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.+(js|json|css|md|mdx|html)\"",
    "validate": "npm-run-all --parallel test build lint"
  },
  "eslintConfig": {
    "extends": "react-app",
    "overrides": [
      {
        "files": "**/slides/*.js",
        "rules": {
          "no-unused-vars": "off",
          "no-undef": "off",
          "react/jsx-no-undef": "off",
          "default-case": "off"
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run validate"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "husky": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2"
  }
}
